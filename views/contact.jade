extends layout

block content
	div.col-lg-offset-2.col-lg-8
		div.row
			form(role="form")
				div.form-group
					label(for="email") Your Email
					input#email.form-control(type="email", name="email", required)
				div.form-group
					label(for="subject") Subject
					input#subject.form-control(type="text", name="subject", required)
				div.form-group
					label(for="message") Message
					textarea#message.form-control(name="message", required)
				button.btn.btn-default(type="submit") Submit
