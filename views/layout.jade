doctype
html
	head

		title Julie Edwards
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(href="/stylesheets/vendor/bootstrap.min.css", rel="stylesheet", media="screen")
		link(href="/stylesheets/style.css", rel="stylesheet")
		script(src="/javascripts/vendor/modernizr-latest.js")
	body

		div.container
			div#heading.row
				div#heading-image
					img(src="/images/Bird.png", alt="Bird.png")
				div#heading-text
					h1 Julie Edwards
					h2 Handmade Jewellery
			div#navigation.row
				div.navbar.navbar-default.shadow(role="nagivation")
					div.collapse.navbar-collapse.navbar-ex1-collapse
						ul.nav.navbar-nav
							li
								a(href="#") Home
							li
								a(href="#") Jewellery
							li
								a(href="/contact") Contact
			div.row.col-lg-offset-1.col-lg-10
				div.page-header
					h3 #{subheading}&nbsp
						br
						small=subtext
				block content

		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js")
		script(src="/javascripts/vendor/bootstrap.min.js")
		